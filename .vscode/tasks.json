    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build",
            "type": "shell",
            "command": "cargo build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cargo test",
            "type": "shell",
            "command": "RUST_BACKTRACE=1 cargo test --all",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}